<!DOCTYPE HTML>
<html>
    <header>
      <title>DevMatch - About</title>
    </header>
    <body>
      <div class="container text-center">
        <h1>Your Profile</h1>
      </div>
      
      <div class="container">
        <%= @user.profile.first_name %><br />
        <%= @user.profile.last_name %><br />
        <%= image_tag @user.profile.avatar.url %><br />
        <%= @user.profile.job_title %><br />
        <%= @user.profile.description %><br />
        
        <% if current_user.plan_id == 2 %>
          <%= @user.profile.contact_email %><br />
          <%= @user.profile.phone_number %><br />
        <% end %>
        
      </div>
      
    </body>
</html>