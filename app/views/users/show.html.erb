<body>
  <div class="container text-center">
    <h1>Your Profile</h1>
  </div>
  
  <div class="container">
    
    <div class="row">
      <div class="col-md-3 text-center">
        <%= image_tag @user.profile.avatar.url, class: 'avatar-img' %>
      </div>
    
    
    <div class="col-md-6">
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
      <h3><%= @user.profile.job_title %></h3>
        <div class="well profile-blc profile-desc">
          <h3>Description</h3>
          <%= @user.profile.description %>
        </div>
      
      <% if current_user.plan_id == 2 %>
        <div class="well profile-blc profile-cont">
          <h3>Contact Information (Pro users only)</h3>
          <p>Email address: <%= @user.profile.contact_email %><br /></p>
          <p>Phone number: <%= @user.profile.phone_number %><br /></p>
        </div>
      <% end %>
    </div>
  </div>
</body>