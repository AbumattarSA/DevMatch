<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      
      <div class="text-center">
        <% if params[:plan] == '2' %>
        <h1 class="remove-top-margin">Sign up for Pro Membership</h1>
        <p>Sign up now for the pro account and gain full access to the DevMatch community, including the contact details of other members.</p>
        <% else %>
        <h1 class="remove-top-margin">Sign up for Basic Membership</h1>
        <p>Sign up for free now and gain basic access to the DevMatch community.</p>
        <% end %>
      </div>
      
      <div class="well">
        
        <% if params[:plan] == '2' %>
        <h2 class="text-center remove-top-margin">Pro Registration</h2>
        <%= render "pro_form" %>
        <% else %>
        <h2 class="text-center remove-top-margin">Basic Registration</h2>
        <%= render "basic_form" %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>